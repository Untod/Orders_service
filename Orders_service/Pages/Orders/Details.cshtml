@page
@model Orders_service.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Provider)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Provider.Name)
        </dd>
    </dl>
    <div class="col-md-4">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Order.Items[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Order.Items[0].Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Order.Items[0].Unit)
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Order?.Items?.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.Order.Items[i].Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Order.Items[i].Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Order.Items[i].Unit)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order?.Id">Edit</a> |
    <a asp-page="./Delete" asp-route-id="@Model.Order?.Id">Delete</a> |
    <a asp-page="./Index">Back to List</a>
</div>
